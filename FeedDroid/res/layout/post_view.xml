 <LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:feeddroid="http://schemas.android.com/apk/res/com.determinato.feeddroid"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
  
  	<view class="com.determinato.feeddroid.view.ChannelHeader" android:id="@+id/postViewHead"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"/>


	<com.admob.android.ads.AdView
		android:id="@+id/post_list_ad"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom"
		feeddroid:backgroundColor="#000000"
		feeddroid:primaryTextColor="#FFFFFF"
		feeddroid:secondaryTextColor="#CCCCCC"/>  		
  		
  		
  	<ScrollView
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content">
  		
  		<LinearLayout
  			android:orientation="vertical"
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent">
  			<TextView android:id="@+id/postTitle"
  				android:layout_width="fill_parent"
  				android:layout_height="wrap_content"
  				android:textStyle="bold"
  				android:paddingLeft="8px"
  				android:paddingRight="8px"/>	
  				
  			<WebView android:id="@+id/postText"
  				android:layout_width="fill_parent"
  				android:layout_height="fill_parent"/>

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
			
				<ImageButton android:id="@+id/star_post"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>
					
				<TextView android:id="@+id/txt_starred"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:text="@string/star_this"/>
						
			</LinearLayout>
  		</LinearLayout>
  	</ScrollView>
</LinearLayout>
